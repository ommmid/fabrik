cmake_minimum_required(VERSION 3.0.0)
project(fabrik VERSION 0.1.0)


include_directories(src/fabrik/world)
add_library(world src/fabrik/world/src/world.cpp)

add_executable(hello_world src/fabrik/test/src/test_world.cpp)
target_link_libraries(hello_world world)

find_package(Eigen3 REQUIRED)
include_directories(
    SYSTEM ${EIGEN3_INCLUDE_DIRS}
    )

include_directories(src/fabrik/robot_model)
add_library(robot_model src/fabrik/robot_model/src/robot_model.cpp)
target_link_libraries(robot_model Eigen3::Eigen)


add_executable(test_robot_model src/fabrik/test/src/test_robot_model.cpp)
target_link_libraries(test_robot_model world robot_model Eigen3::Eigen)

# install(TARGETS blah
#         DESTINATION bin)